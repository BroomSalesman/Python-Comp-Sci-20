{
    "python.analysis.typeCheckingMode": "basic",
    "editor.fontFamily": "Comic Sans MS",

    "keybindings": [
        {"key": "ctrl + =", "command": "editor.action.fontZoomIn"},
        {"key": "ctrl + -", "command": "editor.action.fontZoomOut"}
    ],

    "emmet.includeLanguages": {
        "html": "html",
        "vue-html": "html",
        "razor": "html",
        "plaintext": "jade"
    },

     // Enables parameter hints
     "editor.parameterHints": false,

    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=pygame"
    ],
    "editor.suggest.filterGraceful": false,

    /* Power Mode Extension */
    "powermode.enabled": true,
    "powermode.presets": "particles",
    "powermode.combo.counterEnabled": "default",
    "powermode.shake.intensity": 0.5,
    "powermode.explosions.frequency": 2,
    "powermode.explosions.offset": 0.2,
    "powermode.explosions.size": 5,
    "powermode.shake.enabled": false,

    /* tailwind settings */
    "tailwindCSS.experimental.configFile": null,
    "tailwindCSS.emmetCompletions": true,


    "editor.hover.delay": 750,
    "wolf.disableHotModeWarning": true,
    "editor.acceptSuggestionOnEnter": "smart",

    /* Pieces Extension */
    "pieces.autocomplete": true,
    "pieces.autocompleteKey": "Tab",


    "editor.smoothScrolling": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.inlineSuggest.suppressSuggestions": true,

    /* Docwriter Extension */
    "docwriter.style": "GoDoc",
    "docwriter.progress.trackFunctions": true,
    "docwriter.progress.trackMethods": true,
    "docwriter.progress.trackClasses": true,
    "docwriter.progress.trackTypes": true,
    "C_Cpp.errorSquiggles": "disabled",

    /* auto closing html tags*/
    "html.autoClosingTags": true,
    "javascript.autoClosingTags": true,
    "typescript.autoClosingTags": true,

    "telemetry.enableTelemetry": false,

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/env": true,
        "**/venv": true
    },

    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/.vscode": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/node_modules": true,
        "venv": true,
        "*.sublime-*": true,
        "env*": true
    },
    "C_Cpp.intelliSenseEngineFallback": "enabled",
    "liveServer.settings.port": 5501
}
