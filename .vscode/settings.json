{
    "python.analysis.typeCheckingMode": "basic",
    "editor.fontFamily": "Comic Sans MS",

    "keybindings": [
        {"key": "ctrl + =", "command": "editor.action.fontZoomIn"},
        {"key": "ctrl + -", "command": "editor.action.fontZoomOut"}
    ],

    "emmet.includeLanguages": {
        "html": "html",
        "vue-html": "html",
        "razor": "html",
        "plaintext": "jade"
    },
    
    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=pygame"
    ],
    "editor.suggest.filterGraceful": false,
    "powermode.enabled": true,
    "powermode.presets": "simple-rift",
    "powermode.combo.counterEnabled": "default",
    "powermode.shake.intensity": 2,
    "powermode.explosions.frequency": 2,
    "powermode.explosions.offset": 0.2,
    "powermode.explosions.size": 5

}
